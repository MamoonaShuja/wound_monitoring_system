<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WoundMonitoringSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_background_light</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:textColorPrimary">@color/text_color_light</item>
        <item name="colorAccent">@color/text_color_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_color_light</item>
        <item name="colorButtonNormal">@color/third_matching_color</item>
        <item name="itemBackground">@color/third_matching_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorControlNormal">@color/text_color_light</item>
        <item name="android:textColorSecondary">@color/text_color_light</item>

    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_color_light</item>
    </style>


    <style name="Theme.WoundMonitoringSystem.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WoundMonitoringSystem.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WoundMonitoringSystem.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>